<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="Environment.props" Condition="Exists('Environment.props')" />
    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <Product>Hollow Knight Ultra-Wide</Product>
        <Version>0.1.1</Version>
        <AssemblyName>$(Product)</AssemblyName>
        <AssemblyVersion>$(Version)</AssemblyVersion>
        <FileVersion>$(Version)</FileVersion>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <LangVersion>latest</LangVersion>
        <RestoreAdditionalProjectSources>
            https://api.nuget.org/v3/index.json;
            https://nuget.bepinex.dev/v3/index.json;
            https://nuget.samboy.dev/v3/index.json
        </RestoreAdditionalProjectSources>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <OutputPath>$(BepInExPluginsPath)\</OutputPath>
        <DebugType>embedded</DebugType>
        <PathMap>$(MSBuildProjectDirectory)=.</PathMap>
        <Deterministic>true</Deterministic>
    </PropertyGroup>

    <!-- Default all references to CopyLocal False -->
    <ItemDefinitionGroup>
        <Reference>
            <Private>False</Private>
        </Reference>
        <ProjectReference>
            <Private>False</Private>
        </ProjectReference>
        <PackageReference>
            <Private>False</Private>
        </PackageReference>
    </ItemDefinitionGroup>

    <Import Project="../zip.target"/>
    
    <ItemGroup>
        <PackageReference Include="BepInEx.Core" Version="5.4.21"/>
    </ItemGroup>

    <ItemGroup>
        <Content Include="$(ConfigManagerPath)\ConfigurationManager-BepInEx5-Mono.dll">
            <Link>ConfigurationManager-BepInEx5-Mono.dll</Link>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>


    <ItemGroup>
        <Reference Include="Assembly-CSharp">
            <HintPath>$(ManagedPath)\Assembly-CSharp.dll</HintPath>
            <Publicize>true</Publicize>
        </Reference>
        <Reference Include="UnityEngine.UIModule">
            <HintPath>$(ManagedPath)\UnityEngine.UIModule.dll</HintPath>
            <Publicize>true</Publicize>
        </Reference>
        <Reference Include="UnityEngine">
            <HintPath>$(ManagedPath)\UnityEngine.dll</HintPath>
            <Publicize>true</Publicize>
        </Reference>
        <Reference Include="UnityEngine.CoreModule">
            <HintPath>$(ManagedPath)\UnityEngine.CoreModule.dll</HintPath>
            <Publicize>true</Publicize>
        </Reference>
        <Reference Include="UnityEngine.UI">
            <HintPath>$(ManagedPath)\UnityEngine.UI.dll</HintPath>
            <Publicize>true</Publicize>
        </Reference>
        <Reference Include="UnityEngine.AnimationModule">
            <HintPath>$(ManagedPath)\UnityEngine.AnimationModule.dll</HintPath>
            <Publicize>true</Publicize>
        </Reference>
        <Reference Include="UnityEngine.VideoModule">
            <HintPath>$(ManagedPath)\UnityEngine.VideoModule.dll</HintPath>
            <Publicize>true</Publicize>
        </Reference>
    </ItemGroup>

    <Target Name="ShowGameProps" BeforeTargets="Build">
        <Message Importance="High" Text="GameFolderName=$(GameFolderName)" />
        <Message Importance="High" Text="GamePath=$(GamePath)" />
        <Message Importance="High" Text="ManagedPath=$(ManagedPath)" />
        <Message Importance="High" Text="BepInExPluginsPath=$(BepInExPluginsPath)" />
        <Message Importance="High" Text="StrippedLibs=$(StrippedLibs)" />
        <Message Importance="High" Text="ConfigManagerPath=$(ConfigManagerPath)" />
    </Target>
    
</Project>
