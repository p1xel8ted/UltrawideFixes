<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="Environment.props" Condition="Exists('Environment.props')"/>
    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Product>Vampire Survivors Ultra-Wide (ML)</Product>
        <Version>0.2.2</Version>
        <AssemblyName>Vampire Survivors Ultra-Wide (ML)</AssemblyName>
        <AssemblyVersion>$(Version)</AssemblyVersion>
        <FileVersion>$(Version)</FileVersion>
        <PlatformTarget>x64</PlatformTarget>
        <RestoreAdditionalProjectSources>
            https://api.nuget.org/v3/index.json;
            https://nuget.bepinex.dev/v3/index.json;
            https://nuget.samboy.dev/v3/index.json
        </RestoreAdditionalProjectSources>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <LangVersion>latest</LangVersion>
        <DebugType>embedded</DebugType>
        <DebugSymbols>true</DebugSymbols>
        <PathMap>$(MSBuildProjectDirectory)=.</PathMap>
        <Deterministic>true</Deterministic>
        <IsPackable>false</IsPackable>
        <OutputPath>$(ModsOutputPath)</OutputPath>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <DefineConstants>Melon</DefineConstants>
    </PropertyGroup>

    <ItemDefinitionGroup>
        <Reference>
            <Private>False</Private>
        </Reference>
        <ProjectReference>
            <Private>False</Private>
        </ProjectReference>
        <PackageReference>
            <Private>False</Private>
        </PackageReference>
    </ItemDefinitionGroup>
    
    <Import Project="../zip.target"/>
    
    
    <ItemGroup>
      <Compile Include="..\Shared\Patches.cs">
        <Link>Patches.cs</Link>
      </Compile>
      <Compile Include="..\Shared\DisplayMetrics.cs">
