<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="Environment.props" Condition="Exists('Environment.props')"/>

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <Product>Hollow Knight Silk Song Ultra-Wide</Product>
        <Version>0.1.6</Version>
        <AssemblyName>$(Product)</AssemblyName>
        <AssemblyVersion>$(Version)</AssemblyVersion>
        <FileVersion>$(Version)</FileVersion>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <LangVersion>latest</LangVersion>
        <RestoreAdditionalProjectSources>
            https://api.nuget.org/v3/index.json;
            https://nuget.bepinex.dev/v3/index.json;
            https://nuget.samboy.dev/v3/index.json
        </RestoreAdditionalProjectSources>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <OutputPath>$(BepInExPluginsPath)</OutputPath>
        <DebugType>embedded</DebugType>
        <DebugSymbols>true</DebugSymbols>
        <PathMap>$(MSBuildProjectDirectory)=.</PathMap>
        <Deterministic>true</Deterministic>
        <IsPackable>false</IsPackable>
    </PropertyGroup>

    <Import Project="../zip.target"/>

    <ItemGroup>
        <PackageReference Include="BepInEx.Core" Version="5.4.21"/>
    </ItemGroup>

    <ItemGroup>
        <Content Include="$(ConfigManagerPath)\ConfigurationManager-BepInEx5-Mono.dll">
            <Link>ConfigurationManager-BepInEx5-Mono.dll</Link>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <!-- Default all references to CopyLocal False -->
    <ItemDefinitionGroup>
