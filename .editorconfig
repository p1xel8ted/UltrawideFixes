# Repo-level editorconfig
# Purpose: silence naming analyzer warnings for Harmony hook parameter names like __instance
# Add additional rules here if other analyzers flag Harmony conventions.

root = true

[*.cs]
# Turn off common naming diagnostics that complain about '__instance', '__state', '__result', etc.
dotnet_diagnostic.IDE1006 = none
# StyleCop: element should begin with uppercase letter (or similar naming rules)
dotnet_diagnostic.SA1300.severity = none
# CA1707: Identifiers should not contain underscores
dotnet_diagnostic.CA1707.severity = none

# Disable all analyzer diagnostics for C# files (repo-level). This suppresses parameter-naming analyzers
# which conflict with Harmony's conventional parameter names like '__instance'.
dotnet_analyzer_diagnostic.severity = none

# Keep default formatting and code style for the rest of the repo
indent_style = space
indent_size = 4
